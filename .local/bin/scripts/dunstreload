#!/usr/bin/env bash
#
# Script to set colors generated by 'wal'
# https://github.com/dylanaraps/wal
 # Source generated colors.
. "$XDG_CACHE_HOME/wal/colors.sh"

reload_dunst() {
	pkill dunst
	if [ -f ~/.cache/wal/active ]; then
		dunst		\
		-lb "${color0}" \
		-nb "${color0}" \
		-cb "${color0}" \
		-lfr "${color12}" \
		-nfr "${color12}" \
		-cfr "${color12}" \
		-lf "${color7}" \
		-nf "${color7}" \
		-cf "${color7}" &
	else
		dunst &
	fi
}

reload_dunst
