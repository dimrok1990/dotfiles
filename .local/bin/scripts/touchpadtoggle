#!/bin/bash

msgId="2298"
TOUCHPAD_ID=`xinput list | grep "Touchpad" | sed -n -e 's/^.*id=//p'|cut -f1`

on() {
	dunstify -u normal -t 3000 -r $msgId "üñ≤Ô∏è Touchpad enabled"
	xinput enable $TOUCHPAD_ID
}

off() {
	xinput disable $TOUCHPAD_ID
	dunstify -u normal -t 3000 -r $msgId "üñ≤Ô∏è Touchpad disabled"
}

if xinput list $TOUCHPAD_ID | grep -q 'This device is disabled'; then
	on
else
	off
fi
